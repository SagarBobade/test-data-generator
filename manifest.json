{
  "name": "Test Data Generator",
  "version": "1.4.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "clipboardWrite",
    "activeTab", 
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js" 
  },
  "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'none'"
}
}