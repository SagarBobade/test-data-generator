{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "ES2015.Promise"],
    "module": "ES6",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@types/chrome"],
    "outDir": "./dist" // Output directory for compiled files
  },
  "include": ["**/*.ts", "**/*.tsx"], // Include all .ts and .tsx files in the root directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}